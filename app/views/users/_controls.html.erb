<% if user == current_user %>
  <div class="user-actions">
    <%= link_to "Edit", edit_user_path(user), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete your profile? Once it's gone, it's gone..."}, class: "btn btn-xs btn-danger" %>
  </div>
<% end %>